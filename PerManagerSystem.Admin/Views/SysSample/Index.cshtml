@using PerManagerSystem.Admin.Core
@{
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
    List<string> perm = (List<string>)ViewBag.Perm;
}
<div class="mvctool">
    @if (perm.Count > 0 & perm.Where(x => x == "Query").Count() > 0)
    {
        <span class="searchSpan">关键字:</span>
        <input id="txtQuery" class="easyui-textbox" data-options="prompt:'请输入关键字...'">
    }
    @Html.ToolButton("btnSearch", "icon-search", "查询", perm, "Query", true)
    @Html.ToolButton("btnAdd", "icon-add", "新增", perm, "Create", true)
    @Html.ToolButton("btnEdit", "icon-edit", "编辑", perm, "Edit", true)
    @Html.ToolButton("btnDetails", "icon-details", "详细", perm, "Details", true)
    @Html.ToolButton("btnRemove", "icon-remove", "删除", perm, "Delete", true)
    @Html.ToolButton("btnExport", "icon-export", "导出", perm, "Export", true)
    @Html.ToolButton("btnReload", "icon-reload", "刷新", perm, "ReLoad", false)   
</div>
<table id="dataList"></table>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<script type="text/javascript">
    $(function () {
        $("#dataList").datagrid({
            url: '/SysSample/GetList',
            methord: 'post',
            fitColumns: true,
            height: $(window).height() - 40,
            sortName: 'Id',
            sortOrder: 'desc',
            idField: 'Id',
            pageSize: 10,
            pageLisst: [10, 20, 30, 40],
            pagination:true,
            striped: true, //奇偶行是否区分
            singleSelect: true,//单选模式
            rownumbers: true,//行号
            columns: [[
                { field: 'Id', title: 'ID', width: 30, align: 'center' },
                { field: 'Name', title: '名称', width: 80, align: 'center' },
                { field: 'Age', title: '年龄', width: 30, align: 'center'},
                {
                    field: 'Bir', title: '生日', width: 80, align: 'center', formatter: function (value, row, index) {
                    return changeDateFormat(value);
                    }
                },
                { field: 'Photo', title: '照片', width: 50, align: 'center' },
                { field: 'Note', title: '说明', width: 160, align: 'center', align: 'center' },
                {
                    field: 'CreateTime', title: '创建时间', width: 60, align: 'center', formatter: function (value, row, index) {
                        //var formatDate = new Date(value);
                        return changeDateFormat(value);
                    }
                }
            ]]
        });
        $("#btnSearch").click(function () {
            $("#dataList").datagrid('load', {
                queryStr: $("#txtQuery").val()
            });
        });
        $("#btnAdd").click(function () {
            $("#modalwindow").html("").append('<iframe width="100%" height="98%" scrolling="no" frameborder="0" src="/SysSample/Create"></iframe>');
            $("#modalwindow").window({ title: '新增', width: 700, height: 400, iconCls: 'icon-add' }).window('open');
        });
        $("#btnEdit").click(function () {
            var row = $("#dataList").datagrid('getSelected');
            if (row) {
                $("#modalwindow").html("").append("<iframe width='100%' height='98%' scrolling='no' frameborder='0' src='/SysSample/Edit/" + row.Id + "'></iframe>");
                $("#modalwindow").window({ title: '编辑', width: 700, height: 400, iconCls: 'icon-edit' }).window('open');
            } else {
                $.messager.alert('提示', '请选择要操作的记录！','warning')
            }
        });
        $("#btnRemove").click(function () {
            var row = $("#dataList").datagrid('getSelected');
            if (row) {
                $.messager.confirm('提示', '您确定要删除所选记录吗？', function (flag) {
                    if (flag) {
                        $.post("/SysSample/Delete/" + row.Id, function (data) {
                            if (data.type==1) {
                                $("#dataList").datagrid('load');
                            }
                            $.messageBox5s('提示', data.message);
                        },'json');
                    }
                })
            } else {
                $.messager.alert('提示', '请选择要操作的记录！', 'warning')
            }
        });
        $("#btnDetails").click(function () {
            var row = $("#dataList").datagrid('getSelected');
            if (row) {
                $("#modalwindow").html("").append("<iframe width='100%' height='98%' scrolling='no' frameborder='0' src='/SysSample/Details/" + row.Id + "'></iframe>");
                $("#modalwindow").window({ title: '详细', width: 700, height: 400, iconCls: 'icon-details-sprite' }).window('open');
            } else {
                $.messager.alert('提示', '请选择要操作的记录！', 'warning')
            }
        });
        $("#btnReload").click(function () {
            $("#dataList").datagrid('reload');
        });
    });
    //ifram 返回
    function frameReturnByClose() {
        $("#modalwindow").window('close');
    }
    //iframe 返回并刷新
    function frameReturnByReload(flag) {
        if (flag)
            $("#dataList").datagrid('load');
        else
            $("#dataList").datagrid('reload');
    }
    //输出信息
    function frameReturnByMes(mes) {
        $.messageBox5s('提示', mes);
    }
    //转换日期格式  
    function changeDateFormat(cellval) {
        if (cellval != null) {
            var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate;
        }
    }
</script>